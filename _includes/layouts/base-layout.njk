{% from "partials/nav-icon.njk" import navIcon %}

<!DOCTYPE html> 
<html lang="en"> 
<head> 
  <meta charset="utf-8"> 
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  {% set css %}{% include "styles/styles.css" %}{% endset %}
  <style>
    {{ css | cssmin | safe }}
  </style>
  {% block ico %}
  <link rel="shortcut icon" type="image/x-icon" href="icons/nodebtcs-icon.ico" />
  {% endblock %}
  <script src="https://kit.fontawesome.com/a7ed7ec2ae.js" crossorigin="anonymous"></script>
  <title>No Debt CS</title>
</head> 
<body>
  <section class="layout-container">
    <header class="heading card animation-target">
      <nav class="heading__navbar">
        <a href="/">
          {% block logo %}
            <img class="heading__navbar logo" src="icons/logo.svg" alt="Computer Science logo"/>
          {% endblock %}
        </a>
        <div class="heading__icons">
          {{navIcon({ url: "https://www.linkedin.com/in/sonjeet/", iconClass: "fab fa-linkedin-in" })}}
          {{navIcon({ url: "https://www.youtube.com/channel/UCMFpLCg1s1GtdBLGri_XgNQ", iconClass: "fab fa-youtube" })}}
          {{navIcon({ url: "https://github.com//sonjeet/no-debt-cs", iconClass: "fab fa-github" })}}
          
        </div>
      </nav>
      <div class="heading__text">
        {% block heading %}
        {% endblock %}
      </div>
    </header>
    <main class="content">
      {% block content %}
      {% endblock %}
    </main>
  </section>
  <footer class="footer">
    <span>Made with some ðŸ’š and a bit of <a href="https://www.11ty.dev/" target="_blank">magic</a> by <a href="https://sonjeetpaul.tech/">Sonj</a></span>
  </footer>
</body> 
</html>