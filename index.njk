{% extends 'layouts/home.njk' %}
{% from "partials/module-card.njk" import moduleCard %}
{% set homeContent = collections.main[0] %}
{% set coreModulesData = collections.core %}
{% set electiveModulesData = collections.elective %}

{% block rationale %}
  {% excerptRationale homeContent %}
{% endblock %}

{% block coreModules %}
  {% for core in coreModulesData %}
    {{ moduleCard({ icon: core.data.image, moduleTitle: core.data.title, url: core.url}) }}
  {% endfor %}
{% endblock %}

{% block electiveModules %}
  {% for elective in electiveModulesData %}
    {{ moduleCard({ icon: elective.data.image, moduleTitle: elective.data.title, url: elective.url }) }}
  {% endfor %}
{% endblock %}

{% block furtherInfo %}
  {% excerptFurtherInfo homeContent %}
{% endblock %}

{% block credits %}
  {% excerptCredits homeContent %}
{% endblock %}